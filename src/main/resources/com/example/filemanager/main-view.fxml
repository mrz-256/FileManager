<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox id="root_vbox" maxWidth="1200.0" prefHeight="675.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.filemanager.UIController">
    <children>
        <ToolBar id="button_bar" prefHeight="40.0" prefWidth="1200.0">
            <items>
                <Button id="back-button" mnemonicParsing="false" onMouseClicked="#onBackClicked">
                    <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../../../icons/button_icons/icon_3.png" />
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip text="back" />
                    </tooltip>
                </Button>
                <Button id="show-as-boxes" mnemonicParsing="false" onMouseClicked="#onShowAsBoxes">
                    <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../../../icons/button_icons/icon_0.png" />
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip text="display files as boxes" />
                    </tooltip>
                </Button>
                <Button id="show-as-list" mnemonicParsing="false" onMouseClicked="#onShowAsList">
                    <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../../../icons/button_icons/icon_1.png" />
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip text="display boxes as list" />
                    </tooltip>
                </Button>
                <Button id="new-tab-button" mnemonicParsing="false" onMouseClicked="#onNewTabClicked">
                    <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../../../icons/button_icons/icon_5.png" />
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip text="new tab" />
                    </tooltip>
                </Button>
                <SplitMenuButton contentDisplay="TEXT_ONLY" mnemonicParsing="false" popupSide="RIGHT" prefHeight="11.0" prefWidth="93.0" text="Settings" textAlignment="RIGHT">
               <graphic>
                  <Label text="Settings" />
               </graphic>
               <items>
                  <CheckMenuItem fx:id="showHiddenCheckbox" mnemonicParsing="false" onAction="#onShowHiddenClicked" text="show hidden files" />
                  <Menu mnemonicParsing="false" text="new file">
                    <items>
                        <MenuItem mnemonicParsing="false" text="new directory" />
                      <MenuItem mnemonicParsing="false" text="new file" />
                    </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="sort files by">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#onSortFilesByName" text="name" />
                        <MenuItem mnemonicParsing="false" onAction="#onSortFilesBySize" text="size" />
                        <MenuItem mnemonicParsing="false" onAction="#onSortFilesByLastModification" text="last modified" />
                    </items>
                  </Menu>
               </items>
                </SplitMenuButton>
            </items>
        </ToolBar>
      <TitledPane fx:id="searchPane" animated="false" expanded="false" text="search">
         <content>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="searchTextField" promptText="search.." />
                  <ChoiceBox fx:id="searchChoiceBox" prefWidth="150.0" value="search from here">
                   <items>
                       <FXCollections fx:factory="observableArrayList">
                           <String fx:value="search from here" />
                           <String fx:value="search from home" />
                       </FXCollections>
                   </items>
                   </ChoiceBox>
                  <Button fx:id="searchConfirmButton" mnemonicParsing="false" text="search" />
                  <Button fx:id="searchCloseButton" mnemonicParsing="false" text="close" />
               </children>
            </HBox>
         </content>
      </TitledPane>
      <TitledPane fx:id="filterTitledPane" animated="false" expanded="false" text="filter">
         <content>
            <TextField fx:id="filterSearchField" promptText="regex filter.." />
         </content>
      </TitledPane>
        <HBox id="main_hbox" prefHeight="625.0" prefWidth="1200.0" VBox.vgrow="ALWAYS">
         <VBox fillWidth="false" maxWidth="200.0" minWidth="150" VBox.vgrow="ALWAYS">
            <children>
                    <Label prefWidth="200.0" style="-fx-border-color: grey; -fx-background-color: transparent;" text="Places">
                  <font>
                     <Font size="21.0" />
                  </font></Label>
                    <VBox id="places_vbox" fx:id="places" prefWidth="200.0" VBox.vgrow="SOMETIMES" />
               <Label layoutX="10.0" layoutY="10.0" prefWidth="200.0" style="-fx-border-color: grey; -fx-background-color: transparent;" text="Recent">
                  <font>
                     <Font size="21.0" />
                  </font>
               </Label>
                    <VBox id="global_files_scrollpane" fx:id="recent" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="SOMETIMES" />
            </children>
         </VBox>
            <TabPane fx:id="tabPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onMouseClicked="#onTabPaneUpdate" tabClosingPolicy="UNAVAILABLE" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <tabs>

            </tabs></TabPane>
        </HBox>
    </children>
</VBox>
